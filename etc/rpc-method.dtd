<!--                   Ampersand                                   -->
<!ENTITY   amp         "&#38;"                                       >
<!--                   Greater-Than                                -->
<!ENTITY   gt          "&#62;"                                       >
<!--                   Less-Than                                   -->
<!ENTITY   lt          "&#60;"                                       >

<!ELEMENT  methoddef     (name, version?, hidden?, signature+,
                          help?, code)                               >
<!ELEMENT  name          (#PCDATA)                                   >
<!ELEMENT  version       (#PCDATA)                                   >
<!ELEMENT  hidden        EMPTY                                       >
<!ELEMENT  signature     (#PCDATA)                                   >
<!ELEMENT  help          (#PCDATA)                                   >
<!ELEMENT  code          (#PCDATA)                                   >
<!ATTLIST  code          language (#PCDATA)                          >
